<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3 mt-3">
    <h1 style="text-align: center">NextAway</h1>
    <h3 style="text-align: center">Sign up to book rooms and hotels</h3>
    <form action="/signup" method="POST" class="needs-validation mt-3" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          type="text"
          class="form-control"
          required
          id="username"
        />

        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          name="email"
          type="email"
          class="form-control"
          required
          id="email"
        />

      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          type="password"
          class="form-control"
          required
          id="password"
        />

      </div>

      <button class="btn btn-success">SignUp</button>
      
    </form>
  </div>
</div>
